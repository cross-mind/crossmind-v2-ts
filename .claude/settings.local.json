{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(find:*)",
      "WebSearch",
      "Bash(lsof:*)",
      "Bash(kill:*)",
      "Bash(pnpm dev:*)",
      "Bash(timeout:*)",
      "Bash(pnpm install:*)",
      "Bash(ps:*)",
      "Bash(curl:*)",
      "Bash(pnpm stop:*)",
      "Bash(pnpm clean:logs:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git worktree:*)",
      "Bash(git branch:*)",
      "Bash(npm run lint:*)",
      "Bash(npx tsc:*)",
      "Bash(wc:*)",
      "Bash(npm run build:*)",
      "Bash(openspec list:*)",
      "Bash(pnpm db:generate:*)",
      "Bash(pkill:*)",
      "Bash(chmod:*)",
      "Bash(pnpm db:push:*)",
      "Bash(npx tsx:*)",
      "Bash(pnpm logs:*)",
      "Bash(ls:*)",
      "Bash(python3:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are evaluating whether Claude should stop working. Context: $ARGUMENTS\n\nAnalyze the conversation and determine if:\n1. All user-requested tasks are complete\n2. Any errors need to be addressed\n3. If self-test is needed.\n4. Follow-up work is needed\n\nRespond with JSON: {\"decision\": \"approve\" or \"block\", \"reason\": \"your explanation\"}",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
